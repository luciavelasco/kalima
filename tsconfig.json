{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "esnext.asynciterable", "dom"],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "suppressExcessPropertyErrors": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "sourceMap": true,
    "inlineSources": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": [
    ".idea",
    "node_modules",
    "assets",
    "public",
    "coverage",
    "docs",
    "tmp",
    "uploads"
  ]
}